<div class="panel panel-default">
  <div class="panel-heading">Product Details</div>
  <ul class="list-group">
    <li class="list-group-item">
      <p>
        <strong>Sku:</strong>
        <%= @product.sku %>
      </p>
    </li>
  </ul>
  <li class="list-group-item">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Custom Fields:</strong>
      <br>
      <% @custom_fields.each do |cf| %>
        <%= form_for cf, url: product_custom_field_path(@product, cf) do |field| %>
          <strong>Key:</strong> <%= cf.key %>
          <strong>Value:</strong> <%= field.text_field :value %>
          <%= link_to("Delete", product_custom_field_path(@product, cf), method: :delete, class: 'btn btn-danger') %>
          <%= field.submit 'Update', class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </p>
  </li>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
