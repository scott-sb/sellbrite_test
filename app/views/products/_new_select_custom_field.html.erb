<h3>Add Custom Field Using Existing Keys</h3>

<%= form_for custom_field, url: product_custom_fields_path(product) do |f| %>
  <div class="form-group">
    <%= f.label :key, class: "control-label" %><br>
    <%= f.select :key, CustomField.uniq.pluck(:key), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :value, class: "control-label" %><br>
    <%= f.text_field :value, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
